
# 应用配置
NODE_ENV=development
PORT=3001

# 数据库配置
DATABASE_URL=postgresql://admin:password@localhost:5432/appbuilder
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB配置
MONGODB_URL=mongodb://admin:password@localhost:27017/appbuilder
MONGODB_DATABASE=appbuilder

# AI服务配置
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=claude-sonnet-4-20250514
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# 向量数据库配置 (可选)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=app-builder-embeddings

# JWT配置
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 会话配置
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# CORS配置
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# 文件存储配置
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=app-builder-assets

# 或使用阿里云OSS
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_OSS_REGION=oss-cn-hangzhou
ALIYUN_OSS_BUCKET=app-builder-assets

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@appbuilder.com

# OAuth配置
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log

# 监控配置
SENTRY_DSN=
PROMETHEUS_PORT=9090

# 预览服务配置
PREVIEW_PORT=3003
PREVIEW_TIMEOUT=30000

# 部署服务配置
VERCEL_TOKEN=
NETLIFY_TOKEN=
AWS_ACCESS_KEY=
AWS_SECRET_KEY=

# 功能开关
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHE=true
ENABLE_WEB_SEARCH=false

# 开发配置
DEBUG=app:*
MOCK_AI_RESPONSES=false